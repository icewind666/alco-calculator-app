<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="simo.com.alco.MainActivity">

    <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">

            <TableLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:stretchColumns="*"
                android:shrinkColumns="*"
                android:weightSum="1"
                android:background="#181919"
                >
                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical|center_horizontal"
                    android:layout_weight="1"
                    android:layout_marginTop="1dp">


                    <TextView
                        android:id="@+id/textView_settings"
                        android:layout_width="380dp"
                        android:layout_height="100dp"
                        android:background="#fdf4f1"
                        android:gravity="left|center_vertical"
                        android:padding="6sp"
                        android:text="Калькуляторы Самогонщика"
                        android:textColor="#181919"
                        android:textSize="18dp" />


                </TableRow>

            </TableLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/black"
                android:orientation="vertical"
                android:weightSum="5">
                <TextView
                    android:id="@+id/textView21"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="6sp"
                    android:layout_marginTop="20dp"
                    android:text="РАЗБАВЛЕНИЕ"
                    android:textColor="@android:color/white"
                    android:textSize="14dp" />

                <Button
                    android:id="@+id/calc_formula_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:background="#4cd3c9"
                    android:padding="6sp"
                    android:paddingTop="10dp"
                    android:text="Формула"
                    android:textSize="14dp" />

                <Button
                    android:id="@+id/calc_fertman_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:background="#4cd3c9"
                    android:padding="6sp"
                    android:text="Интерактивная таблица Фертмана"
                    android:textSize="14dp" />

                <Button
                    android:id="@+id/calc_fertman1_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:background="#4cd3c9"
                    android:padding="6sp"
                    android:text="Классическая таблица Фертмана"
                    android:textSize="14dp" />
                <TextView
                    android:id="@+id/textView22"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="6sp"
                    android:text="ОТБОР"
                    android:textColor="@android:color/white"
                    android:textSize="14dp" />

                <Button
                    android:id="@+id/calc_heads_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:background="#4cd3c9"
                    android:padding="6sp"
                    android:text="@string/cacl_heads_fragment_btn"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/textView23"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="6sp"
                    android:text="БРАГА/ЗАТОРЫ"
                    android:textColor="@android:color/white"
                    android:textSize="14dp" />

                <Button
                    android:id="@+id/calc_sugar_litre_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:background="#4cd3c9"
                    android:padding="6sp"
                    android:text="@string/cacl_sugar_litre_fragment_btn"
                    android:textSize="14dp" />
            </LinearLayout>

        </LinearLayout>

</android.support.design.widget.CoordinatorLayout>
