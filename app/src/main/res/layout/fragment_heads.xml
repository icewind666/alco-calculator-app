<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="simo.com.alco.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="false"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">

            <TableLayout
                android:id="@+id/textTableLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#545145"
                android:shrinkColumns="*"
                android:stretchColumns="*"
                android:weightSum="1">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical|center_horizontal">


                    <TextView
                        android:id="@+id/textView_heads"
                        android:layout_width="wrap_content"
                        android:layout_height="150dp"
                        android:background="#fdf4f1"
                        android:clickable="true"
                        android:focusable="true"
                        android:gravity="end|center_vertical"
                        android:padding="6sp"
                        android:text="@string/heads_inputInitialProof"
                        android:textColor="@color/mainTextColor"
                        android:textSize="12sp" />
                </TableRow>
            </TableLayout>

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#545145"
                android:shrinkColumns="*"
                android:stretchColumns="*"
                android:weightSum="4">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="1dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical|center_horizontal">

                    <Button
                        android:id="@+id/button7_heads"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_marginRight="1dp"
                        android:background="#181919"
                        android:text="@string/btn_7"
                        android:textColor="#fdf4f1"
                        android:textSize="20dp" />

                    <Button
                        android:id="@+id/button8_heads"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_marginRight="1dp"
                        android:background="#181919"
                        android:text="@string/btn_8"
                        android:textColor="#fdf4f1"
                        android:textSize="20dp" />

                    <Button
                        android:id="@+id/button9_heads"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_marginRight="1dp"
                        android:background="#181919"
                        android:text="@string/btn_9"
                        android:textColor="#fdf4f1"
                        android:textSize="20dp" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="1dp"
                    android:layout_weight="1">

                    <Button
                        android:id="@+id/button4_heads"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginRight="1dp"
                        android:background="#181919"
                        android:text="@string/btn_4"
                        android:textColor="#fdf4f1"
                        android:textSize="20dp" />

                    <Button
                        android:id="@+id/button5_heads"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginRight="1dp"
                        android:background="#181919"
                        android:text="@string/btn_5"
                        android:textColor="#fdf4f1"
                        android:textSize="20dp" />

                    <Button
                        android:id="@+id/button6_heads"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_marginRight="1dp"
                        android:background="#181919"
                        android:text="@string/btn_6"
                        android:textColor="#fdf4f1"
                        android:textSize="20dp" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="1dp"
                    android:layout_weight="1">

                    <Button
                        android:id="@+id/button1_heads"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginRight="1dp"
                        android:background="#181919"
                        android:text="@string/btn_1"
                        android:textColor="#fdf4f1"
                        android:textSize="20dp" />

                    <Button
                        android:id="@+id/button2_heads"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginRight="1dp"
                        android:background="#181919"
                        android:text="@string/btn_2"
                        android:textColor="#fdf4f1"
                        android:textSize="20dp" />

                    <Button
                        android:id="@+id/button3_heads"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_marginRight="1dp"
                        android:background="#181919"
                        android:text="@string/btn_3"
                        android:textColor="#fdf4f1"
                        android:textSize="20dp" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="1dp"
                    android:layout_weight="1">

                    <ImageButton
                        android:id="@+id/buttonClear_heads"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_marginRight="0dp"
                        android:background="@color/fertman2LightCyanBg"
                        android:scrollbarAlwaysDrawHorizontalTrack="false"
                        android:src="@drawable/delete" />

                    <Button
                        android:id="@+id/button0_heads"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginRight="1dp"
                        android:background="#181919"
                        android:text="@string/btn_0"
                        android:textColor="#fdf4f1"
                        android:textSize="20dp" />

                    <ImageButton
                        android:id="@+id/buttonNext_heads"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="#4cd3c9"
                        android:src="@drawable/forward"

                        />
                </TableRow>
            </TableLayout>
        </LinearLayout>
    </LinearLayout>

</android.support.design.widget.CoordinatorLayout>

